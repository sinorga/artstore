<div class='container'>
  <%= link_to("新增", new_admin_product_path, :class => "btn btn-primary") %>
  <table class='table'>
    <thead>
      <tr>
        <th>產品</th>
        <th>連結</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td> <%= product.title %></td>
          <td>
            <%= link_to('Show', admin_product_path(product), :class => "btn btn-info") %>
            <%= link_to('Delete', admin_product_path(product), :method => :delete, :data=>{:confirm=>"Are you sure?"}, :class => "btn btn-warning") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
