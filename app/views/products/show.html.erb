<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <h3 class="bg-info"> <%= @product.title %> </h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-5'>
      <%= product_render_photo(@product, :medium) %>
    </div>
    <div class='col-lg-7'>
      <h2> <%= @product.title %> </h2>
      <p><b><%= @product.description %> </b></p>
      <p><b>庫存：<%= @product.quantity %> </b></p>
      <p><b>價格：<%= @product.price %> </b></p>
      <%= simple_form_for @cart_item, html: { role: 'form', class: 'form-inline' } do |f| %>
        <div class="form-group">
          <%= f.input :quantity, label: "數量：", collection: 1..@product.quantity, :input_html => {:class => "form-control"} %>
          <%= f.input :product_id, as: :hidden, :input_html => { :value => @product.id }%>
        </div>
        <div class="form-group">
          <%= f.button :submit, :value => "加入購物車", :disable_with => 'Submiting....', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
