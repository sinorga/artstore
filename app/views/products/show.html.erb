<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <h3 class="bg-info"> <%= @product.title %> </h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-5'>
      <%= product_render_photo(@product, :medium) %>
    </div>
    <div class='col-lg-7'>
      <h2> <%= @product.title %> </h2>
      <p><b><%= @product.description %> </b></p>
      <p><b>數量：<%= @product.quantity %> </b></p>
      <p><b>價格：<%= @product.price %> </b></p>
      <div class="pull-right">
        <%= link_to("加入購物車", add_to_cart_product_path(@product) , :method => :post , :class => "btn btn-primary btn-lg btn-danger") %>
     </div>
    </div>
  </div>
</div>
